#!/usr/bin/env bash
# Python environment installation script

# Brew depends and the main python
brew install python
brew install freetype
brew install qt
brew install pyqt
brew install zmq
brew install swig

# Creating virtualenv environment
pip install virtualenv
pip install virtualenvwrapper
mkdir $HOME/.virtualenv

