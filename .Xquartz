#!/bin/bash
# Script to get xquartz installed in osx
set -ex
wget http://xquartz.macosforge.org/downloads/SL/XQuartz-2.7.4.dmg
hdiutil attach -mountpoint /Volumes/xquartz XQuartz-2.7.4.dmg
sudo installer -pkg /Volumes/xquartz/XQuartz.pkg -target /
hdiutil detach /Volumes/xquartz
rm XQuartz-2.7.4.dmg
