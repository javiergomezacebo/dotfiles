#!/usr/bin/env bash

##
## Install the rest of applications used and comment those that you don't need
## eg. VirtualBox if you go for the latest version
##

# Bodymedia activity tracker, it costs over $150 so I want it running no matter what
# Get the bodymedia zipfile
wget -O bm.zip http://www.bodymedia.com/macsync && tar xvf bm.zip
# Install the application
sudo installer -pkg "Install BodyMedia | Sync.pkg" -target /
# Clean
rm -rf "Install BodyMedia | Sync.pkg" __MACOSX bm.zip

# Install xQuartz
cd $HOME && wget http://xquartz.macosforge.org/downloads/SL/XQuartz-2.7.5.dmg
hdiutil attach XQuartz-2.7.5.dmg && rm XQuartz-2.7.5.dmg
sudo installer -pkg /Volumes/XQuartz-2.7.5/XQuartz.pkg -target /
hdiutil detach /Volumes/XQuartz-2.7.5

# Clone into Portzar's secret githup repo
mkdir $HOME/Portzar && git clone https://github.com/PortZar/portzar.git $HOME/Portzar
# Check into the devel branch
cd $HOME/Portzar && git checkout devel
